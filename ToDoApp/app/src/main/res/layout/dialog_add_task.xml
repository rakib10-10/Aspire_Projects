<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Gradient Header -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:padding="24dp"
            android:background="@drawable/bg_gradient_top"
            android:layout_height="wrap_content">

            <TextView
                android:text="Create a Task"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:text="Name"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/taskTitle"
                android:textColor="#000000"
                android:textColorHint="#B3AEAE"
                android:hint="Enter Task Name"
                android:backgroundTint="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Date"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:hint="Oct 24, 2020"
                android:textColor="#000000"
                android:textColorHint="#B3AEAE" />
        </LinearLayout>

        <!-- White Rounded Card -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Start Time"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edtStartTime"
                        android:ems="10"
                        android:hint="Select Start Time"
                        android:textColor="#000000"
                        android:textColorHint="#A9A3A3"
                        android:backgroundTint="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="End Time"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edtEndTime"
                        android:ems="10"
                        android:hint="Select End Time"
                        android:textColor="#000000"
                        android:textColorHint="#A9A3A3"
                        android:backgroundTint="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:text="Description"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/taskDescription"
                android:hint="Task details..."
                android:minLines="3"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textColorHint="#A9A3A3"
                android:backgroundTint="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Category"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Category Options -->
            <LinearLayout
                android:id="@+id/categoryContainer"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <!-- First Row (3 Buttons) -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnDesign"
                        android:text="Design"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/category_chip_unselected"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnMeeting"
                        android:text="Meeting"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/category_chip_unselected"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btnCoding"
                        android:text="Coding"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/category_chip_unselected"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Second Row (2 Buttons) -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnLearning"
                        android:text="Learning"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/category_chip_unselected"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btnTesting"
                        android:text="Testing"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/category_chip_unselected"
                        android:textColor="#000000" />
                    <Button
                        android:id="@+id/btnQuickCall"
                        android:text="Quick Call"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/category_chip_unselected"
                        android:textColor="#000000" />

                </LinearLayout>

                <TextView
                    android:text="Status"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnStatusRunning"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="In Progress"
                        android:background="@drawable/status_selected"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnStatusCompleted"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Completed"
                        android:background="@drawable/status_unselected"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/saveTaskButton"
                android:text="Create Task"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_gradient"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
